<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login_Page"
        android:background="@drawable/bg_orange">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/quiztimepic"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="329dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewForgot" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmailAddress"
            android:hint="email"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
            android:minHeight="48dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            android:hint="password"
            app:layout_constraintStart_toStartOf="@+id/editTextEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonGoogleSignin"
            android:minHeight="48dp" />

    <Button
            android:text="sign in "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSignin"
            app:layout_constraintTop_toTopOf="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/buttonSignin"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSignin"
            android:layout_marginTop="4dp" />

    <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:id="@+id/buttonGoogleSignin"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewSignUp"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="@string/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonGoogleSignin"
            android:layout_marginBottom="89dp"
            android:textColor="@color/white" />

    <TextView
            android:text="@string/fortgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewForgot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="41dp" />

</androidx.constraintlayout.widget.ConstraintLayout>