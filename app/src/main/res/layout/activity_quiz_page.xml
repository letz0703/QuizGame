<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizPage"
        android:background="@drawable/bg_orange">

    <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="Correct Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginEnd="37dp" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorrect_QuizPage"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
            android:text="Wrong Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvWrong_QuizPage"
            android:layout_marginEnd="9dp" />

    <TextView
            android:text="60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime_QuizPage"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvTime" />

    <TextView
            android:text="tvQ"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:id="@+id/quizQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/quizAnswerA"
            android:layout_marginBottom="59dp"
            app:layout_constraintVertical_bias="0.978" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWrong_QuizPage"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/quizQuestion"
            app:layout_constraintEnd_toEndOf="@+id/quizQuestion"
            app:layout_constraintHorizontal_bias="0.0" />

    <TextView
            android:text="tvAnswer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/quizAnswerA"
            android:id="@+id/quizAnswerC" />

    <TextView
            android:text="tvAnswer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/quizAnswerA"
            android:id="@+id/quizAnswerD" />

    <TextView
            android:text="tvAnswer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/quizAnswerB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/quizAnswerA"
            android:layout_marginTop="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvAnswer3_QuizPage"
            android:layout_marginBottom="63dp" />

    <TextView
            android:text="tvAnswer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/tvAnswer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAnswer3_QuizPage"
            app:layout_constraintBottom_toTopOf="@+id/quizQuestion"
            android:layout_marginBottom="4dp" />

    <TextView
            android:text="tvAnswer"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/quizAnswerA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp" />

    <Button
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext_QuizPage"
            android:background="@android:color/background_dark"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/quizAnswerD"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toEndOf="@+id/btnFinish_QuizPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.357" />

    <Button
            android:text="finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinish_QuizPage"
            android:background="@android:color/background_dark"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/quizAnswerD"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" />

</androidx.constraintlayout.widget.ConstraintLayout>