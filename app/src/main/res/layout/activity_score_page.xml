<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Score_Page">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/image_result"
            android:id="@+id/ivRsult_ScorePage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" />

    <TextView
            android:text="Correct Answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/ivRsult_ScorePage"
            app:layout_constraintEnd_toStartOf="@+id/tvCorrect_ScorePage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="25dp" />

    <TextView
            android:text="Wrong Answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWrong_ScorePage"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tvCorrect_ScorePage"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCorrect_ScorePage" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorrect_ScorePage"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/ivRsult_ScorePage"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="play again"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlayAgain_ScorePage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnExit_ScorePage"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent" />

    <Button
            android:text="exit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnExit_ScorePage"
            app:layout_constraintStart_toEndOf="@+id/btnPlayAgain_ScorePage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>