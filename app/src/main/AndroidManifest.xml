<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.letz.quizgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Login_Page">
        <activity
                android:name=".Score_Page"
                android:exported="true" />
        <activity
                android:name=".QuizPage"
                android:exported="true" />
        <activity
                android:name=".Forgot_Password"
                android:exported="true"
                android:parentActivityName=".Login_Page"
                android:theme="@style/Theme.Login_Page" />
        <activity
                android:name=".Signup_Page"
                android:exported="true"
                android:parentActivityName=".Login_Page"
                android:theme="@style/Theme.Login_Page" />
        <activity
                android:name=".Login_Page"
                android:exported="true"
                android:theme="@style/Theme.Login_Page" />
        <activity
                android:name=".Splash_Screen"
                android:exported="true"
                android:theme="@style/Theme.QuizGame_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:exported="true" />
    </application>

</manifest>